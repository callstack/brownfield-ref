<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/ListFragment">

    <fragment
        android:id="@+id/ListFragment"
        android:name="com.callstack.brownfieldref.ListFragment"
        android:label="@string/list_fragment_label"
        tools:layout="@layout/fragment_list">

        <action
            android:id="@+id/action_ListFragment_to_DetailsFragment"
            app:destination="@id/NativeFragment" />
    </fragment>

    <fragment
        android:id="@+id/NativeFragment"
        android:name="com.callstack.brownfieldref.NativeFragment"
        android:label="@string/native_fragment_label"
        tools:layout="@layout/fragment_native">
    </fragment>
</navigation>